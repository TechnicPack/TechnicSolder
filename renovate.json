{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeDisabled",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":semanticCommitTypeAll(chore)",
    ":separateMajorReleases"
  ],
  "configMigration": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": [
        "composer"
      ],
      "matchPackagePatterns": [
        "^php$"
      ],
      "matchDatasources": [
        "composer"
      ],
      "enabled": false
    }
  ]
}
